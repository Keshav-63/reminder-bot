# ─── Google Sheets ────────────────────────────────────────────────────────
# Option 1: JSON array (multiple spreadsheets, each with multiple sheets)
# SPREADSHEETS=[{"id":"SPREADSHEET_ID_1","sheets":["Sheet1","Sheet2"]},{"id":"SPREADSHEET_ID_2","sheets":["Tasks"]}]
#
# Option 2: Comma-separated IDs (each reads default "Sheet1")
# SPREADSHEETS=SPREADSHEET_ID_1,SPREADSHEET_ID_2
#
# Option 3: Single legacy format
SPREADSHEETS=your-google-spreadsheet-id-here
#
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ─── Email (Gmail example — use App Password, not your login password) ───
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-gmail-app-password
MAIL_SERVICE=gmail
MAIL_FROM_NAME=Reminder Bot
MANAGER_EMAIL=manager@yourcompany.com

# For custom SMTP (uncomment and set MAIL_SERVICE to empty):
# MAIL_HOST=smtp.yourprovider.com
# MAIL_PORT=587
# MAIL_SECURE=false

# ─── Scheduler ────────────────────────────────────────────────────────────
CRON_SCHEDULE=0 9 * * 1-5
TIMEZONE=Asia/Kolkata
SKIP_WEEKENDS=true
RUN_ON_STARTUP=false

# ─── Batching (tune for large sheets) ────────────────────────────────────
SHEET_BATCH_SIZE=5000
SHEET_WRITE_BATCH_SIZE=500

# ─── Email Queue ─────────────────────────────────────────────────────────
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=5
QUEUE_BASE_DELAY_MS=1000
QUEUE_MAX_DELAY_MS=60000

# ─── Deduplication ───────────────────────────────────────────────────────
DEDUP_SAME_DAY=true

# ─── Server ──────────────────────────────────────────────────────────────
PORT=7860

# ─── Logging ─────────────────────────────────────────────────────────────
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
